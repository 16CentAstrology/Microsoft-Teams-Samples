{
  "$schema": "https://raw.githubusercontent.com/OfficeDev/microsoft-teams-app-schema/preview/DevPreview/MicrosoftTeams.schema.json",
  "manifestVersion": "devPreview",
  "version": "1.0.1",
  "id": "20685f45-2cb6-4115-9449-f9b34bb40f0c",
  "packageName": "com.microsoft.teams.meetingsigning",
  "developer": {
    "name": "Contoso",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.microsoft.com/privacy",
    "termsOfUseUrl": "https://www.microsoft.com/termsofuse"
  },
  "name": {
    "short": "Meeting Signing",
    "full": "In-Meeting Document Signing"
  },
  "description": {
    "short": "In-meeting document signing app",
    "full": "A proof of concept showcasing a in-meeting document signing app."
  },
  "icons": {
    "outline": "outlineIcon.png",
    "color": "colorIcon.png"
  },
  "accentColor": "#60A18E",
  "staticTabs": [
    {
      "entityId": "com.microsoft.teams.meetingsigning.hellotab",
      "name": "Document Signing",
      "contentUrl": "https://<<deployment-url>>/hello",
      "scopes": [
        "personal"
      ]
    }
  ],
  "configurableTabs": [
    {
      "configurationUrl": "https://<<deployment-url>>/configure",
      "canUpdateConfiguration": true,
      "scopes": [
        "team",
        "groupchat"
      ],
      "context": [
        "meetingChatTab",
        "meetingDetailsTab",
        "meetingSidePanel",
        "meetingStage"
      ]
    }
  ],
  "bots": [],
  "composeExtensions": [],
  "permissions": [],
  "validDomains": [
      "localhost:44326",
      "*.ngrok.io",
      "meetingsigningpoc.azurewebsites.net"
  ],
  "authorization": {
    "permissions": {
      "resourceSpecific": [
        {
          "name": "MeetingStage.Write.Chat",
          "type": "Delegated"
        },
        {
          "name": "ChannelMeetingStage.Write.Group",
          "type": "Delegated"
        }
      ]
    }
  },
  "webApplicationInfo": {
    "id": "<<aad-id>>",
    "resource": "api://<<deployment-url>>/<<aad-id>>"
  }
}
