<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://statics.teams.cdn.office.net/sdk/v1.11.0/js/MicrosoftTeams.min.js" integrity="sha384-SCVF3m7OvDKnfAilUzYn2yozEvBeP8n/Oq0yTH8VUI70J4AzrqR70jzjdQ6DI8s2" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#productStatus").hide();
            $("#captureImage").hide();
            $("#noProductFound").hide();
        });
        microsoftTeams.initialize(() => {
            scanBarCode();
        });

        var productId;
        var productName;
        var image;

        // Method to scan barcode
        function scanBarCode() {
            var config = {
                timeOutIntervalInSec: 30
            };
            // Method that enables the user to scan different types of barcode, and returns the result as a string.  
            microsoftTeams.media.scanBarCode((error, decodedText) => {
                // If there's any error, an alert shows the error message/code
                if (error) {
                    if (error.message) {
                        alert(" ErrorCode: " + error.errorCode + error.message);
                    } else {
                        alert(" ErrorCode: " + error.errorCode);
                    }
                }
                else if (decodedText) {
                    productId = decodedText;

                    if (decodedText == "01SD001") {
                        productName = "Laptop";
                        $("#captureImage").show();
                    }
                    else if (decodedText == "01DU890") {
                        productName = "Desktop";
                        $("#captureImage").show();
                    }
                    else if (decodedText == "01PM998") {
                        productName = "Mobile";
                        $("#captureImage").show();
                    }
                    else if (decodedText == "01NT789") {
                        productName = "Tablet";
                        $("#captureImage").show();
                    }
                    else if (decodedText == "01EW420") {
                        productName = "IOS device";
                        $("#captureImage").show();
                    }
                    else{
                        $("#noProductFound").show();
                    }
                    
                }
            }, config);
        }

        // Method to capture product image 
        function captureImage() {
            microsoftTeams.initialize(()=>{
                // Method to ask for image capture permission and then capture image
                microsoftTeams.media.captureImage((error, files) => {
                // If there's any error, an alert shows the error message/code
                if (error) {
                    if (error.message) {
                        alert(" ErrorCode: " + error.errorCode + error.message);
                    } else {
                        alert(" ErrorCode: " + error.errorCode);
                    }
                } else if (files) {
                    image = files[0].content;
                    $("#productName").text("Product Name :" + productName);
                    document.getElementById("productImage").src = "data:image/png;base64," + image;
                    $("#productStatus").show();
                }
            });
            });     
        };

    function dataURItoBlob(dataURI) {
    // convert base64/URLEncoded data component to raw binary data held in a string
    var byteString;
    if (dataURI.split(',')[0].indexOf('base64') >= 0)
        byteString = atob(dataURI.split(',')[1]);
    else
        byteString = unescape(dataURI.split(',')[1]);

    // separate out the mime component
    var mimeString = dataURI.split(',')[0].split(':')[1].split(';')[0];

    // write the bytes of the string to a typed array
    var ia = new Uint8Array(byteString.length);
    for (var i = 0; i < byteString.length; i++) {
        ia[i] = byteString.charCodeAt(i);
    }

    return new Blob([ia], {type:mimeString});
}
        // Method invoked on approve/reject click.
        function approveRejectProduct(status) {
            alert("hello:"+image);
            var blob = dataURItoBlob("data:image/png;base64," + image);
            let formData = new FormData();
            formData.append("image", blob);
            alert(JSON.stringify(formData));
            var productDetails = {
                "productId": productId,
                "productName": productName,
                "image": formData,
                "status": status?"Approved":"Rejected"
            }
            alert(productDetails);
            $.ajax({
                url: '/Save',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(productDetails),
                success: function (data, textStatus, jQxhr) {
                    console.log('success');
                },
                error: function (jqXhr, textStatus, errorThrown) {
                    console.log('error', errorThrown);
                }
            });

            microsoftTeams.tasks.submitTask();
        }
    </script>
</head>

<body class="theme-light">
    <div class="surface">
        <div class="panel">
            <label id="noProductFound">this product is not available. Please scan the product from 'All product list'</label>
            <div id="captureImage">
                <input type="button" value="Capture Image" onclick="captureImage()">
            </div>
            <div id="productStatus">
                <label id="productName"></label><br/>
                <img id="productImage" src/>
                <button type="button" onclick="approveRejectProduct(true)">Approve</button>
                <button type="button" onclick="approveRejectProduct(false)">Reject</button>
            </div>
        </div>
    </div>
</body>

</html>