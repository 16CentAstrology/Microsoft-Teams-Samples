{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "Request details"
    },
    {
      "type": "TextBlock",
      "size": "Default",
      "weight": "Default",
      "text": "Request title : ${Title}"
    },
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Default",
      "text": "Request description : ${Description}"
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.ShowCard",
          "title": "Edit",
          "card": {
            "type": "AdaptiveCard",
            "body": [
              {
                "type": "Input.Text",
                "label": "Request title",
                "placeholder": "Request title",
                "id": "requestTitle"
              },
              {
                "type": "Input.Text",
                "label": "Request description",
                "placeholder": "request description",
                "id": "requestdescription"
              },
              {
                "type": "TextBlock",
                "size": "Medium",
                "weight": "Bolder",
                "text": "Select manager"
              },
              {
                "type": "Input.ChoiceSet",
                "choices": [],
                "choices.data": {
                  "type": "Data.Query",
                  "dataset": "graph.microsoft.com/users"
                },
                "id": "people-picker",
                "isMultiSelect": false
              },
              {
                "type": "ActionSet",
                "actions": [
                  {
                    "type": "Action.Submit",
                    "title": "Submit",
                    "data": {
                      "isFromAdaptiveCard": true,
                      "requestId": "${TaskId}"
                    }
                  }
                ]
              }
            ]
          }
        },
        {
          "type": "Action.Submit",
          "title": "Cancel request",
          "data": {
            "isFromAdaptiveCard": true,
            "requestId": "${TaskId}"
          }

        }
      ]
    }
  ],
  "type": "AdaptiveCard",
  "version": "1.2"
}